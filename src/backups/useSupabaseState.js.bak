import { useEffect, useRef, useState } from "react";
import { supabase } from "./supabaseClient";

export function useSupabaseState() {
  const [state, setState] = useState(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);
  const saving = useRef(false);

  useEffect(() => {
    let active = true;

    (async () => {
      setLoading(true);
      setError(null);

      const { data, error } = await supabase
        .from("dkp_state")
        .select("state")
        .eq("id", 1)
        .single();

      if (!active) return;

      if (error) {
        setError(error.message ?? String(error));
        setLoading(false);
        return;
      }

      setState(data?.state ?? {});
      setLoading(false);
    })();

    return () => {
      active = false;
    };
  }, []);

  useEffect(() => {
    const channel = supabase
      .channel("dkp_state_changes")
      .on(
        "postgres_changes",
        { event: "*", schema: "public", table: "dkp_state", filter: "id=eq.1" },
        (payload) => {
          if (saving.current) return;
          setState(payload.new.state ?? {});
        }
      )
      .subscribe();

    return () => {
      supabase.removeChannel(channel);
    };
  }, []);

  const saveState = async (updaterOrValue) => {
    setError(null);

    // allow both setDb({..}) and setDb(prev => ({..}))
    const nextState =
      typeof updaterOrValue === "function"
        ? updaterOrValue(state)
        : updaterOrValue;

    setState(nextState);

    saving.current = true;
    const { error } = await supabase
      .from("dkp_state")
      .update({ state: nextState, updated_at: new Date().toISOString() })
      .eq("id", 1);
    saving.current = false;

    if (error) setError(error.message ?? String(error));
  };

  return [state, saveState, loading, error];
}
